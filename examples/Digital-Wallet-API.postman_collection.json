{
  "info": {
    "name": "Digital Wallet API",
    "description": "API REST para gerenciamento de carteira digital",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "account_number",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "    pm.collectionVariables.set('account_number', jsonData.data.account_number);",
                  "    pm.environment.set('token', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"name\": \"João Silva\",\n    \"email\": \"joao@example.com\",\n    \"password\": \"senha123\",\n    \"password_confirmation\": \"senha123\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "    pm.environment.set('token', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"email\": \"joao@example.com\",\n    \"password\": \"senha123\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "    pm.environment.set('token', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["auth", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "Wallet",
      "item": [
        {
          "name": "Balance",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/wallet/balance",
              "host": ["{{base_url}}"],
              "path": ["wallet", "balance"]
            }
          }
        },
        {
          "name": "Deposit",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"amount\": 500.00,\n    \"description\": \"Depósito via PIX\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/wallet/deposit",
              "host": ["{{base_url}}"],
              "path": ["wallet", "deposit"]
            }
          }
        },
        {
          "name": "Withdraw",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"amount\": 200.00,\n    \"description\": \"Saque em caixa eletrônico\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/wallet/withdraw",
              "host": ["{{base_url}}"],
              "path": ["wallet", "withdraw"]
            }
          }
        },
        {
          "name": "Transfer",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"receiver_account_number\": \"DW87654321\",\n    \"amount\": 100.00,\n    \"description\": \"Pagamento jantar\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/wallet/transfer",
              "host": ["{{base_url}}"],
              "path": ["wallet", "transfer"]
            }
          }
        },
        {
          "name": "Chargeback",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"transaction_id\": 1,\n    \"reason\": \"Transação duplicada\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/wallet/chargeback",
              "host": ["{{base_url}}"],
              "path": ["wallet", "chargeback"]
            }
          }
        },
        {
          "name": "Contestar",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"transaction_id\": 2,\n    \"motivo\": \"Não reconheço esta transação\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/wallet/contestar",
              "host": ["{{base_url}}"],
              "path": ["wallet", "contestar"]
            }
          }
        },
        {
          "name": "Transaction Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/wallet/transaction/1",
              "host": ["{{base_url}}"],
              "path": ["wallet", "transaction", "1"]
            }
          }
        },
        {
          "name": "Statement",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/wallet/statement?start_date=2025-01-01&end_date=2025-01-31&per_page=15",
              "host": ["{{base_url}}"],
              "path": ["wallet", "statement"],
              "query": [
                {
                  "key": "start_date",
                  "value": "2025-01-01"
                },
                {
                  "key": "end_date",
                  "value": "2025-01-31"
                },
                {
                  "key": "per_page",
                  "value": "15"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
