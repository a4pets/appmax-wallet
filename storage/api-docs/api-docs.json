        "/api/wallet/statement": {
            "get": {
                "tags": [
                    "Wallet"
                ],
                "summary": "Get account statement with daily consolidation",
                "description": "Get account statement with daily consolidation",
                "operationId": "143c32523162f1f9ea6e242bf62a925b",
                "parameters": [
                    {
                        "name": "start_date",
                        "in": "query",
                        "description": "Start date (YYYY-MM-DD)",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date",
                            "example": "2025-01-01"
                        }
                    },
                    {
                        "name": "end_date",
                        "in": "query",
                        "description": "End date (YYYY-MM-DD) - Maximum 90 days from start_date",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date",
                            "example": "2025-01-31"
                        }
                    },
                    {
                        "name": "transaction_type",
                        "in": "query",
                        "description": "Filter by transaction type",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "deposit",
                                "withdraw",
                                "transfer_in",
                                "transfer_out"
                            ]
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Items per page (1-100)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "maximum": 100,
                            "minimum": 1,
                            "example": 15
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Statement retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "date": {
                                                        "type": "string",
                                                        "format": "date",
                                                        "example": "2025-01-15"
                                                    },
                                                    "opening_balance": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 1000
                                                    },
                                                    "closing_balance": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 1500
                                                    },
                                                    "total_credits": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 500
                                                    },
                                                    "total_debits": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 0
                                                    },
                                                    "net_change": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 500
                                                    },
                                                    "transaction_count": {
                                                        "type": "integer",
                                                        "example": 3
                                                    },
                                                    "transactions": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "object"
                                                        }
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "summary": {
                                            "properties": {
                                                "period": {
                                                    "properties": {
                                                        "start_date": {
                                                            "type": "string",
                                                            "format": "date"
                                                        },
                                                        "end_date": {
                                                            "type": "string",
                                                            "format": "date"
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "opening_balance": {
                                                    "type": "number",
                                                    "format": "float"
                                                },
                                                "closing_balance": {
                                                    "type": "number",
                                                    "format": "float"
                                                },
                                                "total_credits": {
                                                    "type": "number",
                                                    "format": "float"
                                                },
                                                "total_debits": {
                                                    "type": "number",
                                                    "format": "float"
                                                },
                                                "net_change": {
                                                    "type": "number",
                                                    "format": "float"
                                                },
                                                "total_days": {
                                                    "type": "integer"
                                                },
                                                "total_transactions": {
                                                    "type": "integer"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "meta": {
                                            "properties": {
                                                "current_page": {
                                                    "type": "integer"
                                                },
                                                "per_page": {
                                                    "type": "integer"
                                                },
                                                "total": {
                                                    "type": "integer"
                                                },
                                                "last_page": {
                                                    "type": "integer"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "404": {
                        "description": "Account not found"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
